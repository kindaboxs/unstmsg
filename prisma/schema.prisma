generator client {
  provider     = "prisma-client"
  output       = "../lib/generated/prisma"
  moduleFormat = "esm"
  runtime      = "nodejs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnsentMessage {
  id      String @id @default(uuid())
  from    String
  to      String
  trackId String
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([from])
  @@index([to])
}
